@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot your password?";
}
@section styles{
    @*<link rel="Stylesheet" href="@Href("~/Content/MyStyles.css")" />*@
    <style>
        #forgotPassword {
            margin-top:70px;
        }
    </style>

}
@*<h2>@ViewData["Title"]</h2>*@
<div class="row">
    <div class="col-lg-2"></div>
    <div class="card col-lg-8" id="forgotPassword">
        <!--Header-->
        <div class="form-header special-color-dark">
            <h3><i class="fa fa-lock"></i> Forgot Password</h3>
        </div>
        @*<p>
                For more information on how to enable reset password please see this <a href="https://go.microsoft.com/fwlink/?LinkID=532713">article</a>.
            </p>*@

        <form asp-controller="Account" asp-action="ForgotPassword" method="post" class="form-horizontal">
            <div asp-validation-summary="All" class="text-danger"></div>
            
            <div class="form-group">

                <div class="col-md-12  md-form">
                    
                    <input asp-for="Email" class="form-control" />
                    <label asp-for="Email" for="Email" class="control-label">Enter Your Email</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-12 flex-center">
                    <button type="submit" class="btn red darken-4">Submit</button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-lg-2"></div>
</div>
    @section Scripts {
        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    }
